<div class="work-tasks">
    <div class="today-title">
      <h1>
        Work Tasks!
      </h1>
      <h2>
        <% const date = new Date(); %> <% const option = {year: 'numeric', month:
        'long', day: 'numeric'} %> <%= new Intl.DateTimeFormat('de-DE',
        option).format(date) %>
      </h2>
    </div>
    <div class="tasks">
      <ul>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>      <%# unchecked-checkbox-inner should be toggled to checked-checkbox-inner when clicking %>     
                                                              <%# checkbox and task name should be crossed %>
          </div>
          <p><%# Task name %></p>                             <%# Task name should be inserted after clicking add button %>
        </li>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>
          </div>
          <p<%# Task name %></p>
        </li>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>
          </div>
          <p<%# Task name %></p>
        </li>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>
          </div>
          <p class="crossed"><%# Task name %></p>
        </li>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>
          </div>
          <p class="crossed"><%# Task name %></p>
        </li>
        <li class="task-item">
          <div class="unchecked-checkbox-outer">
            <div class="unchecked-checkbox-inner"></div>
          </div>
          <p class="crossed"><%# Task name %></p>
        </li>
      </ul>
      <div class="task-input">
        <input
          type="textarea"
          maxlength="30"
          name="task-name"
          placeholder="What's your working goal?"
        />
        <button type="submit">
          <div class="horizontal-line"></div>
          <div class="vertical-line"></div>
        </button>
      </div>
    </div>
  </div>