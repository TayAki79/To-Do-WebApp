<%- include("partials/header.ejs")%>

  <div class="today-tasks">
    <div class="today-title">
      <h1>
        Today's Tasks!
      </h1>
      <h2>
        <% const date = new Date(); %> <% const option = {year: 'numeric', month:
        'long', day: 'numeric'} %> <%= new Intl.DateTimeFormat('de-DE',
        option).format(date) %>
      </h2>
    </div>
    <div class="tasks">
      <ul>
        <% if (locals.tasks) { %>
          <% tasks.forEach((newTask, index) => { %>
            <li class="task-item">
              <input id="tasks<% index %>" type="checkbox">
              <span class="checkmark"></span>
              <label for="tasks<% index %>" class="task-label">
                <%= newTask %>
              </label>
            </li>
          <% }); %>
        <% } %>
      </ul>
      <form class="task-input" action="/submit" method="POST">
        <input
          id="todayTaskInput"
          type="text"
          maxlength="30"
          name="task-name"
          placeholder="What's your today's goal?"
          required
        />
        <input type="submit" id="todaySubmit">
            <%#<div class="horizontal-line"></div>
            <div class="vertical-line"></div> %>
        </input>
      </form>
    </div>
  </div>

<%- include("partials/footer.ejs")%>